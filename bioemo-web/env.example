# Environment configuration for bioemo-web

# Authentication API server URL (required when not using mock API)
VITE_AUTH_SERVER_URL=http://localhost:8001

# Emotion analysis API server URL (required when not using mock API)
VITE_EMOTION_SERVER_URL=http://localhost:1235

# Whether to use mock data instead of real API calls
# Set to 'true' for development/testing without backend services
VITE_USE_MOCK_API=false

# Confidence threshold for facial recognition (0.0 to 1.0)
# Default: 0.7 (70% confidence required for successful authentication)
# Lower values = more lenient, higher values = more strict
VITE_CONFIDENCE_THRESHOLD=0.7

# Low confidence threshold for verification requests (0.0 to 1.0)
# Default: 0.3 (30% confidence minimum for manual verification)
# Below this threshold, users must provide credentials for verification
VITE_LOW_CONFIDENCE_THRESHOLD=0.3 